{
  "name": "genesis-backend",
  "version": "1.0.0",
  "description": "Genesis AI Storyboard Generator Backend",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "NODE_ENV=development nodemon --watch src --exec \"ts-node -r tsconfig-paths/register src/index.ts\"",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist .tsbuildinfo",
    "format": "prettier --write .",
    "ingest": "ts-node -r tsconfig-paths/register scripts/bulkUpload.ts",
    "gcp-build": "npm run build",
    "start:dev": "NODE_ENV=development ts-node -r tsconfig-paths/register src/index.ts",
    "test:compare": "ts-node -r tsconfig-paths/register src/tests/compareOutputs.ts"
  },
  "author": "Genesis AI",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@google/generative-ai": "^0.5.0",
    "@supabase/supabase-js": "^2.56.1",
    "bullmq": "^5.58.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "fast-xml-parser": "^5.2.5",
    "glob": "^11.0.3",
    "ioredis": "^5.7.0",
    "json5": "^2.2.3",
    "jszip": "^3.10.1",
    "mammoth": "^1.10.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.1",
    "nanoid": "^5.1.5",
    "office-text-extractor": "^3.0.3",
    "openai": "^5.12.2",
    "pdf-parse": "^1.1.4",
    "pdfkit": "^0.13.0",
    "pg": "^8.16.0",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "pm2": "^6.0.8",
    "pptx-parser": "^1.1.7-beta.9",
    "prom-client": "^15.1.3",
    "puppeteer": "^24.24.0",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.10",
    "@types/pdf-parse": "^1.1.5",
    "@types/pdfkit": "^0.12.12",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "jsondiffpatch": "^0.7.3",
    "nodemon": "^2.0.22",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "zod": "^4.1.12"
  }
}
