export type ModuleType = 'Compliance' | 'Onboarding' | 'Sales' | 'Product' | 'Soft Skills' | 'Leadership';
export type Tone = 'Professional' | 'Conversational' | 'Inspirational' | 'Friendly';
export type ModuleLevel = 'Level 1' | 'Level 2' | 'Level 3';
export type SupportedLanguage = 'English' | 'French' | 'Spanish';

export interface StoryboardFormData {
  moduleName: string;
  moduleType: ModuleType;
  tone: Tone;
  moduleLevel: ModuleLevel;
  language: SupportedLanguage;
  durationMinutes: number;
  brandColors?: string;
  fontFamily?: string;
  learningOutcomes: string[];
  audience: string;
  mainContent: string;
}

export interface StoryboardScene {
  sceneTitle: string;
  visualDescription: string;
  narrationScript: string;
  onScreenText: string;
  interaction?: string | null;
